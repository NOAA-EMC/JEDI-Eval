</task>

<task name="gdas_web" cycledefs="gdas" maxtries="&MAXTRIES;">

	<command>&HOFX_HOMEDIR;/hofx/rocoto/gdas_web.sh</command>

	<jobname><cyclestr>&PSLOT;_gdas_web_@H</cyclestr></jobname>
	<account>&ACCOUNT;</account>
